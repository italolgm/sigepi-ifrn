<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Geral -->
	<style name="fullSizeView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>
	<style name="fullSizeView.vertical">
		<item name="android:orientation">vertical</item>
	</style>
	<style name="fullSizeView.vertical.body">
		<item name="android:background">@drawable/gradient_body</item>
	</style>
	
	<style name="fullWidthView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="fullWidthView.vertical">
		<item name="android:orientation">vertical</item>
	</style>
	
	<style name="wrapAllView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	
	<!-- Lista -->
    <style name="listLabel">
    	<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left</item>
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:textSize">14dp</item>
		<item name="android:textStyle">bold</item>
    </style>
    <style name="listItem">
    	<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">1dp</item>
		<item name="android:paddingRight">1dp</item>
		<item name="android:textSize">18dp</item>
		<item name="android:textColor">@color/black_text</item>
    </style>
    <style name="listItem.Main">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <style name="listItem.Titulo">
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">20dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
    </style>
	
    <!-- form -->
    <style name="formLabel">
    	<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">left</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">8dp</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textColor">@color/black_text</item>
    </style>
    <style name="formLabel.descricao">
		<item name="android:paddingTop">1dp</item>
		<item name="android:paddingBottom">1dp</item>
		<item name="android:paddingLeft">8dp</item>
    </style>
     <style name="formItem.descricao">
		<item name="android:paddingTop">1dp</item>
		<item name="android:paddingBottom">1dp</item>
		<item name="android:paddingLeft">8dp</item>
    </style>
    <style name="formItem">
    	<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">@color/black_text</item>
    </style>
    
    <style name="button_blue">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="button_orange">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
   <style name="edittext">
    	<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_margin">5dp</item>
    </style>
</resources>